      { name: "Docker", experience: "4 years", intensity: "regular" },
      { name: "CI/CD", experience: "5 years", intensity: "regular" },
    ],
  },
};
const categories = Object.keys(skillsData);

const getIntensityStyles = (intensity) => {
  switch (intensity) {
    case "core":
      return "bg-emerald-600 text-white border-emerald-600 text-lg px-6 py-4 shadow-lg shadow-emerald-500/30";
    case "regular":
      return "bg-emerald-100 text-emerald-800 border-emerald-300 text-base px-5 py-3";
    case "exploring":
      return "bg-white text-emerald-700 border-emerald-200 text-sm px-4 py-2";
    default:
      return "bg-white text-slate-700 border-slate-300 text-base px-4 py-2";
  }
};
---

<section
  id="skills"
  class="py-20 px-4 bg-linear-to-br from-slate-900 via-emerald-900 to-slate-900 text-white relative overflow-hidden"
>
  <div class="absolute inset-0 overflow-hidden opacity-10">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-emerald-500 rounded-full blur-3xl animate-pulse"
    >
