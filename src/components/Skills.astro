                </div>
              </div>

              <div class="flex flex-wrap gap-3">
                {data.skills.map((skill, index) => (
                  <div
                    key={index}
                    class={`group rounded-2xl border-2 transition-all duration-300 cursor-pointer hover:scale-105 ${getIntensityStyles(skill.intensity)}`}
                  >
                    <div class="flex flex-col">
                      <span class="font-medium">{skill.name}</span>
                      <span class="text-xs opacity-0 mt-1 transition-opacity duration-200 group-hover:opacity-90">
                        {skill.experience}
                      </span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          );
        })
      }
    </div>

    <div
      class="bg-white/5 backdrop-blur-xl rounded-2xl p-6 border border-white/10 mb-12"
    >
