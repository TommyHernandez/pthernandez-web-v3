---
import { getCollection } from "astro:content";

const journey = (await getCollection("journey")).map((entry) => entry.data);
---

<section id="experience" class="py-20 px-4 bg-white relative overflow-hidden">
  <div
    class="absolute top-0 right-0 w-96 h-96 bg-emerald-100 rounded-full opacity-20 blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-96 h-96 bg-green-100 rounded-full opacity-20 blur-3xl"
  >
  </div>

  <div class="max-w-6xl mx-auto relative">
    <div class="text-center mb-16">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-100 rounded-full mb-4"
      >
        <span class="w-4 h-4 text-emerald-600">ðŸ’¼</span>
        <span class="text-sm text-emerald-700">Career Journey</span>
      </div>
      <h2 class="text-4xl md:text-5xl mb-4 text-slate-900">
        A Decade of Growth
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        From fullstack foundations to frontend leadershipâ€”the story of
        continuous evolution
      </p>
    </div>

    <div class="relative">
      <div
        class="absolute left-8 top-0 bottom-0 w-0.5 bg-linear-to-b from-emerald-200 via-emerald-400 to-emerald-200 hidden md:block"
      >
      </div>

      <div class="space-y-12">
        {
          journey.map((experience, index) => (
            <div key={index} class="relative">
              <div class="absolute left-8 -ml-3 hidden md:block">
                <div
                  class={`w-6 h-6 rounded-full bg-linear-to-br ${experience.color} shadow-lg`}
                />
              </div>

              <div class="md:ml-24">
                <div class="border-2 hover:border-emerald-300 transition-all hover:shadow-xl p-2 lg:p-4 rounded-lg">
                  <div class="pt-6">
                    <div class="flex flex-col md:flex-row md:items-start justify-between mb-6">
                      <div class="flex items-start gap-4 mb-4 md:mb-0">
                        <div
                          class={`p-3 bg-linear-to-br ${experience.color} rounded-2xl shrink-0`}
                        >
                          <span class="w-6 h-6 text-white">
                            {experience.icon}
                          </span>
                        </div>
                        <div>
                          <h3 class="text-2xl text-slate-900 mb-1">
                            {experience.company}
                          </h3>
                          <p class="text-lg text-emerald-700 mb-1">
                            {experience.role}
                          </p>
                          <p class="text-sm text-slate-500">
                            {experience.period}
                          </p>
                        </div>
                      </div>
                      <span
                        class={`px-3 py-1 rounded-full bg-linear-to-r ${experience.color} text-white border-0 shrink-0`}
                      >
                        {experience.theme}
                      </span>
                    </div>

                    <p class="text-slate-700 italic mb-6 text-lg">
                      "{experience.story}"
                    </p>

                    <div class="grid md:grid-cols-3 gap-4 mb-6">
                      {experience.highlights.map((highlight, hIndex) => (
                        <div
                          key={hIndex}
                          class="bg-slate-50 rounded-xl p-4 border border-slate-200"
                        >
                          <div class="flex items-start gap-2 mb-2">
                            <span class="w-5 h-5 text-emerald-600 shrink-0 mt-0.5">
                              ðŸ’¡
                            </span>
                            <h4 class="text-sm text-slate-900">
                              {highlight.title}
                            </h4>
                          </div>
                          <p class="text-xs text-slate-600 mb-3 leading-relaxed">
                            {highlight.description}
                          </p>
                          <div class="inline-block px-3 py-1 bg-emerald-100 text-emerald-700 rounded-full text-xs">
                            {highlight.impact}
                          </div>
                        </div>
                      ))}
                    </div>

                    <div class="flex flex-wrap gap-2 mb-4">
                      {experience.stack.map((tech, tIndex) => (
                        <span
                          key={tIndex}
                          class="px-2 py-1 bg-white border border-slate-300 rounded-full text-sm"
                        >
                          {tech}
                        </span>
                      ))}
                    </div>

                    <div class="bg-linear-to-r from-emerald-50 to-green-50 rounded-lg p-4 border-l-4 border-emerald-500">
                      <p class="text-sm text-slate-700">
                        <strong class="text-emerald-900">Key Learning: </strong>
                        {experience.keyLearning}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div
      class="mt-16 bg-linear-to-br from-slate-900 via-emerald-900 to-slate-900 rounded-3xl p-12 text-white"
    >
      <div class="flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="flex-1">
          <h3 class="text-3xl mb-4">The Journey Continues</h3>
          <p class="text-lg text-slate-300 mb-6">
            From building my first PHP application to leading frontend teams,
            every experience has shaped how I approach problems today. I bring
            fullstack understanding to frontend workâ€”and that makes all the
            difference.
          </p>
          <div class="flex flex-wrap gap-4">
            <div class="text-center">
              <div class="text-3xl mb-1">10+</div>
              <p class="text-sm text-emerald-300">Years</p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-1">50+</div>
              <p class="text-sm text-emerald-300">Projects</p>
            </div>
            <div class="text-center">
              <div class="text-3xl mb-1">12+</div>
              <p class="text-sm text-emerald-300">Mentored Devs</p>
            </div>
          </div>
        </div>
        <a
          href="#contact"
          class="px-8 py-4 bg-emerald-600 hover:bg-emerald-700 rounded-full transition-colors flex items-center gap-2"
        >
          Let's Work Together
        </a>
      </div>
    </div>
  </div>
</section>
